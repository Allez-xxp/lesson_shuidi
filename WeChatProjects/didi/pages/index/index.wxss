page{
  width: 100%;
  height: 100vh;
  background-color: #f4f6f8;
}
.container{
  /* rpx,对应的是750像素，
  任何设备在小程序里都是750rpx */
  position: fixed;
  width: 667rpx;     
  height: 438rpx;
  background-color: rgb(0, 113, 128);
  margin-top: 32rpx;
  margin-left: 32rpx;
  top: 140rpx;
  box-shadow: 1px 1px 6px #f4f6f8;   /*盒子阴影 */

}
.section{
  height:108rpx;
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  top: 0;
  left: 0;
}
/* 优化 */
.nav-me,.nav-all{
  height: 30rpx;
  width: 30rpx;
  background-color: #ffffff;
  z-index: 999;
}
.nav-me{
  left: 0;
  margin-top: 10rpx;
  transform: scale(.15);
 /*  z-index: 999; z-index，层次； transform，缩放图片大小*/
}
.nav-all{
  right: 0rpx;
  position: absolute;
  top: 0;
  transform: scale(.18);
  margin-right: 80rpx;  
}
.nav{
  height: 108rpx;
  width: 550rpx;
  position: fixed;
  box-sizing: border-box;
  overflow: hidden;   
  line-height: 108rpx;
  background-color: #ffffff;
  font-size: 16px;
  white-space: nowrap;
  top: 0;
  left: 100rpx;
  right: 100rpx;
  z-index: 99;
  margin-bottom: 32px;

}
.nav-item{
  display: inline-block;
  margin-left: 20rpx;
  margin-right: 20rpx;
  text-align: center;
}
.nav-item.active{
  color: #fc975c;

}
